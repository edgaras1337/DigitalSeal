@using DigitalSeal.Web.Models

@model ConfirmationModalModel

<div class="modal fade" id="@Model.Id" tabindex="-1" aria-labelledby="@(Model.Id + "-label")" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="@(Model.Id + "-label")">@Model.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Model.Body
            </div>
            <div class="modal-footer">
                <simple-button title="Cancel" button-type="Secondary" />
                <simple-button title="@Model.MainButtonTitle" button-type="@Model.ButtonType" is-server-action="true" class="confirm-button" />
            </div>
        </div>
    </div>
</div>