@using DigitalSeal.Web.Models.ViewModels.Account;
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Account/_Layout.cshtml";
}

@section Scripts {
    <script src="~/js/forgotPasswordPage.js" asp-append-version="true" type="module"></script>
}

<h2 class="pt-3">Reset password</h2>
<hr />
<h6>Enter your email, to which we will send a link where you can reset your password.</h6>
<div id="forgot-password">
    <div class="small-form">
        <form asp-action="@nameof(AccountController.ForgotPassword)" id="forgot-password-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @if (Model == null || !Model.IsSent)
            {
                <div class="form-group">
                    <button type="submit" class="button primary-button" id="submit-button">Send</button>
                </div>
            }
        </form>

    </div>
    @if (Model != null && Model.IsSent)
    {
        <h6>The email has been sent. Please open the link to reset the password.</h6>
        <partial name="_SendAgainPartial" />
    }
</div>